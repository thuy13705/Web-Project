<!DOCTYPE html>
<html>

<head>
    <%- include ('partials/head');%>
</head>
<%- include("partials/loader")%>
    <%- include ('partials/header');%>
        <div id="tt-pageContent"></div>
            <div class="container-indent">
                <div class="container container-fluid-custom-mobile-padding">
                    <h1 class="tt-title-subpages noborder">Tài khoản</h1>
                    <% studentList.forEach(user=> {%>
                        <div class="tt-wrapper" style="margin-bottom: 50px;">
                            <div class="tt-table-responsive">
                                <table class="tt-table-shop-02">
                                    <tbody>
                                        <tr>
                                            <td>Username:</td>
                                            <td>
                                                <%= user.username %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>E-MAIL:</td>
                                            <td>
                                                <%= user.email %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Password:</td>
                                            <td>
                                                <%= user.password %>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <a href="/teacher-list/update/<%= user._id%>" class="btn btn-border">Change</a>
                            
                            <%if (user.isLock==false) { %>
                                <a href="/lock-user/<%= user._id %>" class="btn btn-border">Lock</a>
                                <% } %>
                                <%if (user.isLock==true) { %>
                                    <a href="/lock-user/<%= user._id %>" class="btn btn-border">Un Lock</a>
                                    <% } %>
                            <a href="/teacher-list/delete/<%= user._id %>" class="btn btn-border">Delete</a>
                        </div>
                        <% }); %>
                </div>
            </div>
        </div>
        <%- include("partials/script") %>
            <footer>
                <%- include('partials/footer'); %>
            </footer>

</html>