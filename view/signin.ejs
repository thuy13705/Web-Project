<!DOCTYPE html>
<html>
  <head>
    <%- include("partials/head") %> 
  </head>
  <header>
    <%- include("partials/loader")%>
    <%- include("partials/header") %>
  </header>
  <body>
    <div id="tt-pageContent">
      <div class="container-indent">
        <div class="container">
          <div class="tt-login-form">
            <div class="row justify-content-center">
              <div class="col-md-8 col-lg-6">
                <div class="tt-item">
                  <h2 class="tt-title">SIGNIN</h2>
                  <%if (message != "undefined") { %>
                  <div
                    class="form-group form-control error"
                    style="background-color: #FFCCCC; font-weight: bold; color : rgb(210, 29, 29)">
                    <%= message %>
                  </div>
                  <% } %>
                  <div class="form-default">
                    <form method="POST" class="form-group" action="/signin" novalidate="novalidate>
                      <label for="email">Email</label>
                      <input
                        type="text"
                        name="email"
                        id="email"
                        class="form-control"
                        aria-describedby="helpId"
                      />
                      <label for="password">Password</label>
                      <input
                        type="password"
                        name="password"
                        id="password"
                        class="form-control"
                        aria-describedby="helpId"
                      />
                  
                      <button id="submit-btn" class="btn btn-primary mt-2" type="submit">Đăng nhập</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
<script>
  function onSignIn(googleUser) {
    // Useful data for your client-side scripts:
    var profile = googleUser.getBasicProfile();
    console.log('ID: ' + profile.getId()); // Don't send this directly to your server!
    console.log('Full Name: ' + profile.getName());
    console.log('Given Name: ' + profile.getGivenName());
    console.log('Family Name: ' + profile.getFamilyName());
    console.log('Image URL: ' + profile.getImageUrl());
    console.log('Email: ' + profile.getEmail());

    // The ID token you need to pass to your backend:
    var id_token = googleUser.getAuthResponse().id_token;
    console.log('ID Token: ' + id_token);
  }

  function renderButton() {
    gapi.signin2.render('my-signin2', {
      scope: 'profile email',
      width: 500,
      height: 50,
      longtitle: true,
      theme: 'dark',
      onsuccess: onSuccess,
      onfailure: onFailure,
    });
  }
</script>
<%- include("partials/script") %>
<footer>
  <%- include("partials/footer") %>
</footer>

</html>

